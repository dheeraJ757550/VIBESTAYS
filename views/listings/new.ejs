 <% layout("/layouts/boilerplate") %>
 <div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a new listings</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">  Title</label>
            <input type="text"
             name="listing[title]"
              placeholder="Add a Title" 
              class="form-control" id=""
              required
               />
               <div class="valid-feedback">Title goods look</div>
         </div>
        <div class="mb-3">
            <label for="description" class="form-label">  description</label>
            <textarea type="text"   class="form-control" name="listing[description]" placeholder="enter description" id="" required></textarea>
            <div class="invalid-feedback">Enter a valid description</div>


        </div>
      
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input   name="listing[image]" class="form-control" placeholder="enter image/url link" id="">
        </div> -->
        <div class="mb-3">
            <label for="image" class="form-label">  Upload Listing Image</label>
            <input  type="file" name="listing[image]" class="form-control"  id="" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">  Price</label>
                <input     class="form-control" name="listing[price]" placeholder="eg. 1200" id="" required>
                <div class="invalid-feedback">Price should be valid</div>

            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">  Country</label>
                <input type="text"   name="listing[country]" class="form-control" placeholder="eg. India" id="" required>
                <div class="invalid-feedback">Country should be valid</div>

            </div>

        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">  Location</label>
            <input type="text"   name="listing[location]" class="form-control" placeholder="eg. Delhi" id="" required>
            <div class="invalid-feedback">Location should be valid</div>




        </div>
        <br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>


    </form>
</div>
    
</div>